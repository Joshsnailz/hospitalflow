# Clinical Portal 2.0 - Environment Variables Template
# Copy this file to .env and fill in the actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_USER=clinical_user
DB_PASSWORD=change_this_secure_password
DB_HOST=localhost

# Individual database URLs (for services)
AUTH_DB_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/auth_db
USER_DB_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5433/user_db
RBAC_DB_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5434/rbac_db
AUDIT_DB_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5435/audit_db

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ============================================
# RABBITMQ CONFIGURATION
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=clinical_user
RABBITMQ_PASSWORD=change_this_rabbitmq_password
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate secure random strings for production!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# ENCRYPTION CONFIGURATION
# ============================================
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-encryption-key-change-in-production-exactly-32-bytes
BCRYPT_ROUNDS=12

# ============================================
# SERVICE URLS (Internal)
# ============================================
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
RBAC_SERVICE_URL=http://localhost:3003
AUDIT_SERVICE_URL=http://localhost:3004
API_GATEWAY_URL=http://localhost:3000

# ============================================
# FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_APP_NAME=Clinical Portal 2.0
NEXT_PUBLIC_ENV=development

# ============================================
# MONITORING CONFIGURATION
# ============================================
GRAFANA_PASSWORD=admin123
PROMETHEUS_PORT=9090
GRAFANA_PORT=3200

# ============================================
# EMAIL CONFIGURATION (Future)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@clinicalportal.com

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Session timeout in milliseconds (15 minutes)
SESSION_TIMEOUT=900000
# Max failed login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5
# Account lockout duration in milliseconds (30 minutes)
LOCKOUT_DURATION=1800000

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3100
CORS_CREDENTIALS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_ANONYMOUS=10
RATE_LIMIT_MAX_AUTHENTICATED=100
RATE_LIMIT_MAX_ADMIN=1000

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development
PORT=3000
