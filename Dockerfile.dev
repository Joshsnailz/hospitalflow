FROM node:20-alpine

WORKDIR /repo

# Native deps for bcrypt and other Node addons
RUN apk add --no-cache libc6-compat python3 make g++

COPY package.json package-lock.json turbo.json tsconfig.json ./
COPY apps ./apps
COPY packages ./packages
COPY libs ./libs
COPY scripts ./scripts

RUN npm install

# Build all NestJS services
RUN npm run build --prefix apps/auth-service || true
RUN npm run build --prefix apps/user-service || true
RUN npm run build --prefix apps/rbac-service || true
RUN npm run build --prefix apps/audit-service || true
RUN npm run build --prefix apps/patient-service || true
RUN npm run build --prefix apps/clinical-service || true
RUN npm run build --prefix apps/hospital-service || true
RUN npm run build --prefix apps/api-gateway || true
