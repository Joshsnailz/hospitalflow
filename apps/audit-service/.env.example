# Node Environment
NODE_ENV=development
PORT=3004

# Database (Local PostgreSQL)
AUDIT_DB_HOST=localhost
AUDIT_DB_PORT=5432
AUDIT_DB_USER=clinical_user
AUDIT_DB_PASSWORD=clinical_password
AUDIT_DB_NAME=audit_db

# JWT (must match auth-service)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# CORS
CORS_ORIGIN=http://localhost:3100

# RabbitMQ (optional - for async audit log ingestion)
RABBITMQ_URL=amqp://clinical_user:change_this_rabbitmq_password@localhost:5672
AUDIT_QUEUE=audit.logs
AUDIT_DATA_ACCESS_QUEUE=audit.data-access

# Audit Settings
AUDIT_RETENTION_DAYS=2555
